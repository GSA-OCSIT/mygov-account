.row
	.eight.columns
		%h2
			Add a new authentication provider
		- unless current_user.authentications.collect { |auth| auth.provider.to_sym }.include?(:"max.gov")
			.row
				.six.columns
					%p
						Are you a U.S. federal government employee?  Verify your employment status with MAX.gov.
				.six.columns
					.panel.side-panel
						%ul.button-list
							%li
								= link_to 'Connect your MAX.gov account', user_omniauth_authorize_path(:provider => :maxgov)
		
.container
	.row
		.eight.columns
			.container
				.row
					.six.columns
						%p
							Do you already have an account with one of these sites?
					.six.columns
						.panel.side-panel
							%ul.button-list
								- Devise.omniauth_providers.each do |provider|
									- unless [:maxgov, :google].include?(provider) or current_user.authentications.collect { |auth| auth.provider.to_sym }.include?(provider)
										%li
											= link_to provider.to_s.titleize, user_omniauth_authorize_path(:provider => provider)