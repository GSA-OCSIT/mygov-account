- if flash.alert
  - content_for :scripts do
    = javascript_tag do
      $('html,body').animate({scrollTop: $('.alert-box').offset().top},'slow');
.row
  .twelve.columns
    %h2
      = t(:sign_in)
.row
  .eight.columns
    .panel
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {novalidate: true}) do |f|
        - if flash.alert
          .alert-box
            = flash.alert
        %fieldset.plain
          %ol.inline
            %li
              = f.label :email
              = f.email_field :email
            %li.no-margin
              = f.label :password
              = f.password_field :password, autocomplete: 'off'
            - if devise_mapping.rememberable?
              %li.full
                = f.check_box :remember_me
                = f.label :remember_me
          - if devise_mapping.recoverable? && controller_name != 'passwords'
            = link_to t(:forgot_your_password), new_password_path(resource_name)    
        .actions      
          = f.submit t(:sign_in), :class => 'large positive button'
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to t(:sign_up), new_registration_path(resource_name)
    .four.columns
  .four.columns
    .panel.side-panel
      = render "devise/shared/links"
  .four.columns
    .panel.tertiary
      %h3.h4
        Help
      = render "devise/shared/help"