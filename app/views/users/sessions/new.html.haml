.row
  .twelve.columns
    %h2
      = t(:sign_in)
.row
  .eight.columns
    .panel
      = form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {novalidate: true}) do |f|
        = flash_messages
        = devise_error_messages!
        %fieldset.plain
          %ol.inline
            %li
              = f.label :email
              = f.email_field :email, :tabindex => autotab
            %li.no-margin
              = f.label :password
              = f.password_field :password, autocomplete: 'off', :tabindex => autotab
            - if devise_mapping.rememberable?
              %li.full
                = f.check_box :remember_me, :tabindex => autotab
                = f.label :remember_me
          - if devise_mapping.recoverable? && controller_name != 'passwords'
            = link_to t(:forgot_your_password), new_password_path(resource_name), :tabindex => autotab
        .actions      
          = f.submit t(:sign_in), :class => 'large positive button', :tabindex => autotab, :accesskey => access_keys[:submit]
          - if devise_mapping.registerable? && controller_name != 'registrations'
            = link_to t(:sign_up), new_registration_path(resource_name), :tabindex => autotab
    .four.columns
  .four.columns
    .panel.side-panel
      = render "devise/shared/links"
  .four.columns
    .panel.tertiary
      %h3.h4
        Help
      = render "devise/shared/help"